<Page x:Class="LibraryManager.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <StackPanel Margin="20">
        <TextBlock Text="Profil" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Felhasználónév:"/>
        <TextBox x:Name="UsernameTextBox" IsReadOnly="True" Margin="0,5,0,15"/>

        <TextBlock Text="Név:"/>
        <TextBox x:Name="NameTextBox" Margin="0,5,0,15"/>

        <TextBlock Text="Email:"/>
        <TextBox x:Name="EmailTextBox" Margin="0,5,0,15"/>

        <TextBlock Text="Jogosultság:"/>
        <TextBox x:Name="RoleTextBox" IsReadOnly="True" Margin="0,5,0,15"/>

        <Button Content="Adatok mentése" Width="150" Margin="0,20,0,0" HorizontalAlignment="Left" Click="SaveProfile"/>
    </StackPanel>
</Page>
