<Page x:Class="LibraryManager.BookListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookListPage">

    <Grid>
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                <TextBlock Text="Könyvek listája" FontSize="24" FontWeight="Bold" Margin="0,0,270,10"/>
                <ComboBox x:Name="CategoryComboBox" Width="200" Margin="10">
                    <ComboBoxItem Content="mind"/>
                    <ComboBoxItem Content="regény"/>
                    <ComboBoxItem Content="tudományos"/>
                    <ComboBoxItem Content="ismeretterjesztő"/>
                    <ComboBoxItem Content="egyéb"/>
                </ComboBox>
                <Button Content="Szűrés" Width="75" Margin="10" Click="FilterBooksClick"/>
            </StackPanel>
            <ListBox x:Name="BookListBox" Height="300"/>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                <Button Content="Könyv Hozzáadása" Width="125" Margin="10" Click="AddBookButtonClick"/>
                <Button Name="EditBookButton" Content="Könyv Szerkesztése" Width="125" Margin="10" Click="ChangeBookButtonClick" IsEnabled="False"/>
                <Button Name="DeleteBookButton" Content="Könyv Törlése" Width="125" Margin="10" Click="DeleteBookButtonClick" IsEnabled="False"/>
                <Button Name="ImportBooksButton" Content="Import" Width="50" Margin="10" Click="ImportBooksClick" IsEnabled="False"/>
                <Button Name="ExportBooksButton" Content="Export" Width="50" Margin="10" Click="ExportBooksClick" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
