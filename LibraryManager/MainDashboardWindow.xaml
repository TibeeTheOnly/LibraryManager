<Window x:Class="LibraryManager.MainDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManager"
        mc:Ignorable="d"
        Title="MainDashboardWindow" Height="650" Width="1300" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Navigációs menüt-->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#fff">
            <Button Content="Profil" Height="50" Margin="10" Click="NavigateToProfilePageClick"/>
            <Button Name="UserListPageButton" Content="Felhasználók listája" Height="50" Margin="10" Click="NavigateToUsersListPageClick" IsEnabled="False"/>
            <Button Content="Könyvek" Height="50" Margin="10" Click="NavigateToBookListPageClick"/>
            <Button Content="Kijelentkezés" Height="50" Margin="10" Click="LogoutClick" Background="#FFFF5A5A"/>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
